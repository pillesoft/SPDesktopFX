<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Label fx:id="lblHeader" styleClass="viewTitle" text="%titleCategory" textFill="#1820b2">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Label>
      <SplitPane dividerPositions="0.5">
        <items>
            <VBox spacing="5.0">
               <children>
                  <HBox alignment="CENTER">
                     <children>
                        <Button alignment="CENTER" mnemonicParsing="false" onAction="#handleNew" text="New Category" />
                     </children>
                     <VBox.margin>
                        <Insets left="5.0" right="5.0" />
                     </VBox.margin>
                  </HBox>
                  <TableView fx:id="categoryTable">
                    <columns>
                      <TableColumn fx:id="nameColumn" prefWidth="120.0" text="Name" />
                      <TableColumn fx:id="colorColumn" prefWidth="120.0" text="Color" />
                    </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                     <VBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </VBox.margin>
                  </TableView>
               </children>
            </VBox>
          <AnchorPane styleClass="view">
               <children>
                  <VBox alignment="CENTER_LEFT" layoutX="5.0" layoutY="5.0" spacing="5.0" AnchorPane.leftAnchor="5.0" AnchorPane.rightAnchor="5.0" AnchorPane.topAnchor="5.0">
                     <children>
                        <Label fx:id="nameLabel" styleClass="categoryLabel" text="Category Name">
                           <VBox.margin>
                              <Insets left="5.0" />
                           </VBox.margin>
                        </Label>
                        <TextField fx:id="txtName" editable="false" />
                        <Rectangle fx:id="colorRectangle" arcHeight="5.0" arcWidth="5.0" fill="DODGERBLUE" height="200.0" stroke="BLACK" strokeType="INSIDE" width="200.0" />
                     </children>
                     <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </padding>
                  </VBox>
                  <ButtonBar layoutX="203.0" layoutY="237.0" prefHeight="40.0" AnchorPane.rightAnchor="5.0" AnchorPane.topAnchor="400.0">
                    <buttons>
                        <Button mnemonicParsing="false" onAction="#handleEdit" text="Edit" />
                        <Button mnemonicParsing="false" onAction="#handleDelete" text="Delete" />
                    </buttons>
                  </ButtonBar>
               </children>
            </AnchorPane>
        </items>
      </SplitPane>
   </children>
</VBox>
